<% provide(:title, "View My Bookings") %>

<h1>View My Bookings</h1>

<table  class="table">
  <thead class="thead-dark">
    <tr>
      <th>Room</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= get_room_name(booking.room_id) %></td>
        <td><%= booking.start_time.strftime("%F %R")%></td>
        <td><%= booking.end_time.strftime("%F %R")%></td>
        <td><%= link_to 'Show', user_booking_path(booking.user_id,booking.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_user_booking_path(current_user.id) %>
