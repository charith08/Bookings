<%= form_with(model: @booking,local: true) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if logged_in? %>
    <div class="form-group">
      <%= form.label :user_id %>
      <%= form.text_field :user_name, value: current_user.name, disabled:'disabled',class:"form-control" %>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>

    <div class="form-group">
      <%= form.label :room_id %>
      <%= collection_select(:booking, :room_id, Room.where(status:"In Use").to_ary, :id, :name, {}, { class: "form-control" }) %>
    </div>

    <div class="form-group">
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time, { min: Time.current}, { class: "form-control" }%>
    </div>

    <div class="form-group">
      <%= form.label :end_time%>
      <%= form.datetime_select :end_time, { min: 30.minutes.since}, { class: "form-control" } %>
    </div>

    <div class="form-group">
    <%= form.label :status %>
    <%= form.select(:status, ['In Use'] ,{}, {class:"form-control"}) %>
  </div>

    <div class="actions">
      <%= form.submit "Book" , class:"btn btn-primary form-control" %>
    </div>
  <% else %>
          <%= flash.now[:danger] = 'Please log in before make bookings' %>
          <%= link_to "Log in", login_path %>
  <% end %>

<% end %>
